<div class="container ko-main-content">
  <h1>Add Concerts for <%= @band.name %></h1>
  <% if @band.errors.any? %>
    <% @band.errors.full_messages.each do |error| %>
      <div class="alert alert-danger"><%= error %></div>
    <% end %>
  <% end %>
  <form class="ko-form" action="/bands/<%= @band.id %>/concerts" method="post">
    <% @venues.each do |venue| %>
    <input type="hidden" name="venues[]" value="<%=venue.id%>">
    <label for="date">Date of Concert at <%= venue.name %></label>
    <input type="text" name="months[]" placeholder="MM" size="2"> / <input type="text" name="days[]" placeholder="DD" size="2"> / <input type="text" name="years[]" placeholder="YYYY" size="4"><br>
    <% end %>
    <button type="submit">ADD CONCERTS</button>
  </form>
</div>
