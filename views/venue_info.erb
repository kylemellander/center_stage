<div class="container ko-main-content">
  <a href="/venues/<%= @venue.id %>/edit" class="edit_button btn btn-default">edit</a>
  <h1><%= @venue.name %></h1>
  <h5><%= @venue.location %></h5>
  <% if @venue.bands.any? %>
  <h3>Bands who have played here</h3>
  <ul class="ko-list">
    <% name = "" %>
    <% @venue.bands.order('name').each do |band| %>
      <% if name != band.name %>
      <li><a href="/bands/<%= band.id %>"><%= band.name %></a></li>
      <% end %>
      <% name = band.name %>
    <% end %>
  </ul>
  <% else %>
  <h3>There haven't been any concerts here!
  <% end %>
</div>
